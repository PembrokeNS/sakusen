SUBDIRS =

ifeq ($(ENABLE_PERL_BINDINGS),yes)
SUBDIRS := $(SUBDIRS) perl5
endif

ifeq ($(ENABLE_DOTNET_BINDINGS),yes)
SUBDIRS := $(SUBDIRS) dotNET
endif

ifeq ($(ENABLE_PYTHON_BINDINGS),yes)
SUBDIRS := $(SUBDIRS) python
endif


ifeq ($(BUILD_ARCH),x86)
SWIGWORDSIZE := -DSWIGWORDSIZE32
endif

ifeq ($(BUILD_ARCH),x86_64)
SWIGWORDSIZE := -DSWIGWORDSIZE64
endif

export SWIGWORDSIZE
